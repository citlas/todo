
<p id="notice"><%= notice %></p>

<h1 class="todo_list_title">To-do list</h1>
<br>
<h2 class="todo_list_sub_title">things to-do</h2>
<table>
  <thead>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        
         
          <div class=“row clearfix”>
            <% if todo_item.completed? %>
              <div class=“complete”>
              <td> <%= link_to complete_todo_item_path(todo_item), method: :patch do%> 
              <i style="color:#aea6a6;" class="fa fa-check"></i>
                <%end%>
              </td>
              </div>
              <div class=“todo_item”>
               <td> <p style="color:#aea6a6;"><strike><%= todo_item.content %></strike></p> </td>
              </div>
              <div class=“trash”>
               <td> <%= link_to todo_item, method: :delete, data: { confirm: 'Are you sure?' } do %>
               <i class="fa fa-trash"></i>
               <%end%>
                </td>
              </div>
              <td><%= link_to edit_todo_item_path(todo_item) do %>
                 <i class="fa fa-pencil"></i>
               <%end%>  
              </td>
            <%else%>
              <div class=“complete”>
                <td><%= link_to complete_todo_item_path(todo_item), method: :patch do%>
                  <i class="fa fa-check"></i>
                  <%end%>
                </td>
              </div>
              <div class=“todo_item”>
               <td> <p><%= todo_item.content %></p></td>
              </div>
              <div class=“trash”>
                <td><%= link_to todo_item, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash"></i>
               <%end%>
                </td>
              </div>
              <td><%= link_to edit_todo_item_path(todo_item) do %>
                 <i class="fa fa-pencil"></i>
               <%end%>  
              </td>
            <%end%>
          </div>
        
   
      </tr>
    <% end %>
  </tbody>
</table>



<br>
<div id="form">
<%= render 'form' %>
</div>

